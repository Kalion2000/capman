pkgname=abcde
pkgver=2.9.1
pkgrel=1
pkgdesc="Frontend command-line utility that grabs tracks off a CD, encodes them to ogg or mp3 format, and tags them, all in one go"
arch=('x86_64')
url="https://abcde.einval.com/"
license=('GPL')
groups=()
depends=('bash' 'cd-discid' 'vorbis-tools' 'wget')
makedepends=()
optdepends=('cdparanoia: Paranoia ripping support'
            'flac: FLAC encoding support'
            'glyr: album art support'
            'lame: MP3 encoding support'
            'opus-tools: Opus encoding support'
            'python-eyed3: ID3 tag support'
            'vorbisgain: Ogg Vorbis normalization support')
provides=()
conflicts=()
replaces=()
source=("https://dl.bintray.com/chromebrew/chromebrew/abcde-2.9.1-chromeos-x86_64.tar.xz")
sha256sums=('eb965e6d641bd482b7e0789e5231b7555ca28dd2dbc1ef736769f8084355f31a')

package() {
  install -dm 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
