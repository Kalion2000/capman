pkgname=cronie
pkgver=1.5.2
pkgrel=1
pkgdesc="Daemon that runs specified programs at scheduled times and related tools"
arch=('x86_64')
url="https://github.com/cronie-crond/cronie/"
license=('custom:BSD')
groups=()
depends=('bash' 'pam' 'run-parts')
makedepends=()
optdepends=('smtp-forwarder: forward job output to email server'
            'smtp-server: send job output via email')
provides=('cron')
conflicts=('cron')
replaces=()
source=("https://dl.bintray.com/chromebrew/chromebrew/cronie-1.5.2-chromeos-x86_64.tar.xz")
sha256sums=('28117939c3609d603068e21c5c16149d43677369c3660e3980705cd4ca98aede')

package() {
  install -dm 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
