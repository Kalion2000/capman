# Maintainer: William Turner <willtur.will@gmail.com>

pkgname=dr
pkgver=2.0
pkgrel=1
pkgdesc="A simple ed-like devRant client"
arch=('x86_64')
url="https://github.com/Ewpratten/dr"
license=('custom')
groups=()
depends=('setuptools')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
source=()
sha256sums=()

build() {
  yes | crew build dr
  tar xf "dr-2.0-chromeos-$arch.tar.xz"
}

package() {
  install -dm 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
