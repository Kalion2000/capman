pkgname=dub
pkgver=1.7.1
pkgrel=1
pkgdesc="Developer package manager for D programming language"
arch=('x86_64')
url="https://github.com/D-Programming-Language/dub"
license=('MIT')
groups=('dlang')
depends=('curl' 'liblphobos')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
source=("https://dl.bintray.com/chromebrew/chromebrew/dub-1.7.1-chromeos-x86_64.tar.xz")
sha256sums=('7213094cd902a3f201be78d692075782d2b78ac72af5df34248cddc203443270')

package() {
  install -dm 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
