pkgname=ffmpeg
pkgver=4.1
pkgrel=1
pkgdesc="Complete solution to record, convert and stream audio and video"
arch=('x86_64')
url="https://ffmpeg.org/"
license=('GPL3')
groups=()
depends=('libopencoreamr' 'libvoamrwbenc' 'libmp3lame' 'libfrei0r' 'libtheora' 'libvorbis' 'xorg-lib' 'openjpeg' 'rtmpdump' 'libvdpau' 'vidstab' 'libopus' 'libsoxr' 'libwebp' 'libx264' 'libx265' 'libxvid' 'libdrm' 'gnutls' 'libass' 'libva' 'speex')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
options=(!strip staticlibs !zipman !purge)
source=("https://dl.bintray.com/chromebrew/chromebrew/ffmpeg-4.1-1-chromeos-x86_64.tar.xz")
sha256sums=('3720e339c273fd6d8913220e08a1c1ba8d25d056803747c8f077818c78d8b287')

package() {
  install -d -m 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
