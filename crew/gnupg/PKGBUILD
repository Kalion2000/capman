pkgname=gnupg
pkgver=2.2.7
pkgrel=1
pkgdesc="Complete and free implementation of the OpenPGP standard"
arch=('x86_64')
url="https://www.gnupg.org/"
license=('GPL')
groups=()
depends=('bzip2' 'gnutls' 'libassuan' 'libgcrypt' 'libgpg-error' 'libksba' 'npth' 'pinentry' 'readline' 'sqlite')
makedepends=()
optdepends=('libldap: gpg2keys_ldap'
            'libusb-compat: scdaemon'
            'pcsclite: scdaemon')
provides=('dirmngr' 'gnupg2=2.2.12')
conflicts=('dirmngr' 'gnupg2')
replaces=('dirmngr' 'gnupg2')
source=("https://dl.bintray.com/chromebrew/chromebrew/gnupg-2.2.7-chromeos-x86_64.tar.xz")
sha256sums=('eaa2a33957ce00de10e0655b326ba1d2d9512b749e1d81cbf205c4c6e064a729')

package() {
  install -dm 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
