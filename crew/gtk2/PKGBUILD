pkgname=gtk2
pkgver=2.24
pkgrel=1
pkgdesc="GObject-based multi-platform GUI toolkit (legacy)"
arch=('x86_64')
url="https://www.gtk.org/"
license=('LGPL')
groups=()
depends=('atk' 'cairo' 'desktop-file-utils' 'gtk-update-icon-cache' 'libcups' 'librsvg' 'libxcomposite' 'libxcursor' 'libxdamage' 'libxi' 'libxinerama' 'libxrandr' 'pango' 'shared-mime-info')
makedepends=()
optdepends=('adwaita-icon-theme: Default icon theme'
            'gnome-themes-standard: Default widget theme')
provides=()
conflicts=()
replaces=()
source=("https://dl.bintray.com/chromebrew/chromebrew/gtk2-2.24-chromeos-x86_64.tar.xz")
sha256sums=('96e236c0057e01ac2790ec5881349a2fa4b6c0821fa3d9ae477a1471f0c1d1af')

package() {
  install -dm 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
