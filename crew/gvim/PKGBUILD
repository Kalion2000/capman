pkgname=gvim
pkgver=8.1
pkgrel=1
pkgdesc="Vi Improved, a highly configurable, improved version of the vi text editor (with advanced features, such as a GUI)"
arch=('x86_64')
url="https://www.vim.org"
license=('custom:vim')
groups=()
depends=('glibc' 'gpm' 'gtk3' 'libffi' 'libgcrypt' 'libxt' 'pcre' 'vim-runtime=8.1.0570-1' 'zlib')
makedepends=()
optdepends=('lua: Lua language support'
            'perl: Perl language support'
            'python: Python 3 language support'
            'python2: Python 2 language support'
            'ruby: Ruby language support'
            'tcl: Tcl language support')
provides=('vim=8.1.0570-1' 'xxd')
conflicts=('vim' 'vim-minimal')
replaces=('gvim-python3')
source=("https://dl.bintray.com/chromebrew/chromebrew/gvim-8.1-1-chromeos-x86_64.tar.xz")
sha256sums=('d8fb8c1ee73295d0e7646235c012f1785c38a67c46db18846faf33b89384cdfc')

package() {
  install -dm 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
