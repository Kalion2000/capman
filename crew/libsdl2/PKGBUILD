url="http://www.libsdl.org"
license=('custom')
groups=()
depends=('xwayland' 'alsa-lib' 'pulseaudio')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
source=("https://dl.bintray.com/chromebrew/chromebrew/libsdl2-2.0.9-chromeos-x86_64.tar.xz")
