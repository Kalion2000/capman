# Maintainer: William Turner <willtur.will@gmail.com>

pkgname=libticables2
pkgver=1.3.5
pkgrel=1
pkgdesc="Libticables2 offers the library used to connect to and perform read/write operations on TI Calculators via. USB."
arch=('x86_64')
url="http://lpg.ticalc.org/prj_tilp/"
license=('custom')
groups=()
depends=('libusb' 'libtifiles2')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
source=()
sha256sums=()

build() {
  yes | crew build libticables2
  tar xf "libticables2-1.3.5-chromeos-$arch.tar.xz"
}

package() {
  install -dm 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
