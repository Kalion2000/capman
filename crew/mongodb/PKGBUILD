# Maintainer: William Turner <willtur.will@gmail.com>

pkgname=mongodb
pkgver=3.2.16
pkgrel=1
pkgdesc="MongoDB is the next-generation database that lets you create applications never before possible."
arch=('x86_64')
url="https://www.mongodb.com/"
license=('custom')
groups=()
depends=('perl')
makedepends=('openssl' 'libpcap' 'python27' 'scons' 'go' 'git')
optdepends=()
provides=()
conflicts=()
replaces=()
options=(staticlibs)
source=()
sha256sums=()

build() {
  yes | crew build mongodb
  tar xf "mongodb-3.2.16-1-chromeos-$arch.tar.xz"
}

package() {
  install -d -m 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
