# Maintainer: William Turner <willtur.will@gmail.com>

pkgname=mongodb
pkgver=3.2.16
pkgrel=1
pkgdesc="A high-performance, open source, schema-free document-oriented database"
arch=('x86_64')
url="https://www.mongodb.com/"
license=('AGPL3')
groups=()
depends=('curl' 'libsasl' 'libstemmer' 'lsb-release' 'openssl' 'pcre' 'snappy' 'wiredtiger' 'yaml-cpp')
makedepends=('libpcap' 'ncurses' 'python2-cheetah' 'python2-regex' 'python2-requests' 'python2-setuptools' 'python2-typing' 'python2-yaml' 'readline' 'scons')
optdepends=('libpcap: needed for mongosniff'
            'mongodb-tools: mongoimport, mongodump, mongotop, etc')
provides=()
conflicts=()
replaces=()
source=()
sha256sums=()

build() {
  yes | crew build mongodb
  tar xf "mongodb-3.2.16-1-chromeos-$arch.tar.xz"
}

package() {
  install -dm 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
