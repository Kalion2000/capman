license=('MIT')
groups=()
depends=('gcc-libs' 'glibc')
makedepends=()
optdepends=()
provides=('libformw.so=6-64' 'libmenuw.so=6-64' 'libncurses++w.so=6-64' 'libncursesw.so=6-64' 'libpanelw.so=6-64')
conflicts=()
