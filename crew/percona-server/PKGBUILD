pkgname=percona-server
pkgver=5.7.20
pkgrel=1
pkgdesc="Drop-in replacement for MySQL that provides improved performance, diagnostics, instrumentation and TokuDB storage engine"
arch=('x86_64')
url="https://www.percona.com/software/mysql-database/percona-server"
license=('GPL')
groups=()
depends=('jemalloc' 'libaio' 'libtirpc' 'lz4' 'numactl' 'openssl' 'pam' 'systemd-tools' 'zstd')
makedepends=()
optdepends=('perl-dbd-mysql')
provides=('mariadb=5.7.24_27' 'mysql=5.7.24_27')
conflicts=('mysql')
replaces=()
source=("https://dl.bintray.com/chromebrew/chromebrew/percona_server-5.7.20-19-chromeos-x86_64.tar.xz")
sha256sums=('47431d59582a5be3361cbfd571de3da9a557b76cea40a01f4b58347988e7aa2c')

package() {
  install -dm 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
