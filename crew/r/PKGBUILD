pkgname=r
pkgver=3.5.1
pkgrel=1
pkgdesc="Language and environment for statistical computing and graphics"
arch=('x86_64')
url="https://www.r-project.org/"
license=('GPL')
groups=()
depends=('blas' 'bzip2' 'curl' 'gcc-libs' 'icu' 'lapack' 'libjpeg' 'libpng' 'libtiff' 'libxmu' 'libxt' 'ncurses' 'pango' 'pcre' 'perl' 'readline' 'unzip' 'xz' 'zip' 'zlib')
makedepends=()
optdepends=('gcc-fortran: needed to compile some CRAN packages'
            'openblas: faster linear algebra'
            'texlive-bin: latex sty files'
            'tk: tcl/tk interface')
provides=()
conflicts=()
replaces=()
source=("https://dl.bintray.com/chromebrew/chromebrew/r-3.5.1-chromeos-x86_64.tar.xz")
sha256sums=('bd46cf97defc2d200e1bf94c0a157040a5f86cc56ffc99e85b6abe5e875f9e50')

package() {
  install -dm 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
