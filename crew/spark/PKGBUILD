pkgname=spark
pkgver=ab88ac
pkgrel=1
pkgdesc="sparklines for your shell"
arch=('x86_64')
url="https://zachholman.com/spark/"
license=('custom')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
source=()
sha256sums=()

build() {
  yes | crew build spark
  tar xf "spark-ab88ac-chromeos-$arch.tar.xz"
}

package() {
  install -dm 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
