# Maintainer: William Turner <willtur.will@gmail.com>

pkgname=sublime-text
pkgver=3.1.1
pkgrel=1
pkgdesc="A sophisticated text editor for code, markup and prose."
arch=('x86_64')
url="https://www.sublimetext.com/"
license=('custom')
groups=()
depends=('sommelier')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
source=()
sha256sums=()

build() {
  yes | crew build sublime_text
  tar xf "sublime_text-3.1.1-chromeos-$arch.tar.xz"
}

package() {
  install -dm 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
