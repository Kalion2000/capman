pkgname=subversion
pkgver=1.9.7
pkgrel=1
pkgdesc="A Modern Concurrent Version Control System"
arch=('x86_64')
url="http://subversion.apache.org/"
license=('APACHE')
groups=()
depends=('file' 'libutf8proc' 'serf' 'sqlite' 'systemd')
makedepends=()
optdepends=('bash-completion: for svn bash completion'
            'java-environment: for Java support'
            'kwallet: for KWallet for auth credentials'
            'libgnome-keyring: for GNOME Keyring for auth credentials'
            'python2: for some hook scripts'
            'ruby: for some hook scripts')
provides=('svn')
conflicts=()
replaces=()
source=("https://dl.bintray.com/chromebrew/chromebrew/subversion-1.9.7-chromeos-x86_64.tar.xz")
sha256sums=('50cc52d28f7ad25b86717310cbae02bf35d8d7b15ea33ed9d4f0e127423ce10e')

package() {
  install -dm 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
