arch=('x86_64')
url="https://vifm.info/"
license=('GPL')
groups=()
depends=('desktop-file-utils' 'ncurses')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
source=("https://dl.bintray.com/chromebrew/chromebrew/vifm-0.9-chromeos-x86_64.tar.xz")
