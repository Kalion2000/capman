pkgname=vim
pkgver=8.1
pkgrel=1
pkgdesc="Vi Improved, a highly configurable, improved version of the vi text editor"
arch=('x86_64')
url="https://www.vim.org"
license=('custom:vim')
groups=()
depends=('acl' 'glibc' 'gpm' 'libffi' 'libgcrypt' 'pcre' 'vim-runtime=8.1.0570-1' 'zlib')
makedepends=()
optdepends=('lua: Lua language support'
            'perl: Perl language support'
            'python: Python 3 language support'
            'python2: Python 2 language support'
            'ruby: Ruby language support'
            'tcl: Tcl language support')
provides=('vim-minimal' 'vim-python3' 'xxd')
conflicts=('gvim' 'vim-minimal' 'vim-python3')
replaces=('vim-minimal' 'vim-python3')
source=("https://dl.bintray.com/chromebrew/chromebrew/vim-8.1-1-chromeos-x86_64.tar.xz")
sha256sums=('6ebd581a5d978985b1eb8c5fe12fafb8e659e94a311a46a047f0eab2d6e4251b')

package() {
  install -dm 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
