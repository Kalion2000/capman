# Maintainer: William Turner <willtur.will@gmail.com>

pkgname=wayland
pkgver=1.32.92
pkgrel=1
pkgdesc="A computer display server protocol"
arch=('x86_64')
url="https://wayland.freedesktop.org/"
license=('MIT')
groups=()
depends=('expat' 'glibc' 'libffi' 'libxml2')
makedepends=('docbook-xsl' 'doxygen' 'graphviz' 'libxslt' 'xmlto')
optdepends=()
provides=()
conflicts=()
replaces=()
source=()
sha256sums=()

build() {
  yes | crew build wayland
  tar xf "wayland-1.32.92-chromeos-$arch.tar.xz"
}

package() {
  install -dm 0755 "$pkgdir/usr"
  cp -a usr/local "$pkgdir/usr"
}
