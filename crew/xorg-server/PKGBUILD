groups=('xorg')
depends=('dbus' 'libdrm' 'libepoxy' 'libgl' 'libpciaccess' 'libunwind' 'libxfont2' 'libxshmfence' 'nettle' 'pixman' 'xf86-input-libinput' 'xorg-server-common')
makedepends=()
optdepends=()
provides=('X-ABI-EXTENSION_VERSION=10.0' 'X-ABI-VIDEODRV_VERSION=24.0' 'X-ABI-XINPUT_VERSION=24.1' 'x-server')
conflicts=('glamor-egl' 'nvidia-utils<=331.20' 'xf86-video-modesetting')
replaces=('glamor-egl' 'xf86-video-modesetting')
