pkgname=sudo
pkgver=0.0.1
pkgrel=1
pkgdesc="A sudo wrapper to fix the LD path issue on Chrome OS"
arch=('any')
url=""
license=('MIT')
groups=('base')
source=("sudo.sh")
sha256sums=('5903106c32c9d71b3f1954d4d97525a6d3361b5e8dccbb42621919160d7375ff')

package() {
  install -D -m755 "$srcdir/sudo.sh" "$pkgdir/usr/local/bin/sudo"
}
